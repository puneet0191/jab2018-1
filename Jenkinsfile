pipeline {
    agent { docker { image 'php' } }
    stages {
        stage('build') {
            steps {
                sh 'php --version'
            }
        }
        stage('Package') {
            steps {
                sh 'php --version'
            }
        }
        stage('Tests') {
            steps {
                sh 'php --version'
            }
        }
        stage('Deploy') {
            steps {
                sh 'php --version'
            }
        }
    }
}
